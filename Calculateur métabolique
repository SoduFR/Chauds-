<body>
    <div class="calculator-container">
        <h1>Calculateur de métabolisme basal</h1>
        <label for="age">Âge (années):</label>
        <input type="number" id="age" min="0">
        <label for="weight">Poids (kg):</label>
        <input type="number" id="weight" min="0">
        <label for="height">Taille (cm):</label>
        <input type="number" id="height" min="0">
        <label for="gender">Sexe:</label>
        <select id="gender">
            <option value="male">Homme</option>
            <option value="female">Femme</option>
        </select>
        <button onclick="calculateBMR()">Calculer le métabolisme basal</button>
        <div id="result"></div>
    </div>
    <script>
        function calculateBMR() {
            const age = parseFloat(document.getElementById('age').value);
            const weight = parseFloat(document.getElementById('weight').value);
            const height = parseFloat(document.getElementById('height').value);
            const gender = document.getElementById('gender').value;
            let bmr;

            if (gender === 'male') {
                bmr = 88.36 + (13.4 * weight) + (4.8 * height) - (5.7 * age);
            } else {
                bmr = 447.6 + (9.2 * weight) + (3.1 * height) - (4.3 * age);
            }

            document.getElementById('result').innerHTML = `Votre métabolisme basal est de ${bmr.toFixed(2)} calories par jour.`;
        }
    </script>
